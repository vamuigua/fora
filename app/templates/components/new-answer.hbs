{{#if addNewAnswer}}
<h1>Answer Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>
      <div class="form-group">
        <label for="content">Answer</label>
        {{input value=content id="content"}}
      </div>
      <button type="button" class="btn btn-success"{{action 'saveAnswer'}}>Answer</button>
      <button type="button" class="btn btn-danger"{{action 'cancelAnswerForm'}}>Cancel</button>
    </form>
  </div>
{{else}}
  <button type="button" class="btn btn-primary"{{action 'answerFormShow'}}>Answer Question</button>
{{/if}}

{{yield}}
