{{#if updateQuestionForm}}
  <h4>Update {{question.author}}'s Question</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="content">Question</label>
        {{input value=content id="content" placeholder=question.content}}
      </div>
      <button type="button" class="btn btn-success"{{action 'update' question}}>Save</button>
      <button type="button" class="btn btn-danger" {{action 'cancelUpdateForm'}}>Cancel</button>
    </form>
  </div>
{{else}}
  <button type="button" class="btn btn-primary" {{action 'updateQuestionForm'}}>Update Question</button>
{{/if}}

{{yield}}
